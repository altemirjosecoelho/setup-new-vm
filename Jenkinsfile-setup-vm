    stages {
        stage('Configurar Credenciais') {
            steps {
                script {
                    // ConfiguraÃ§Ãµes de conexÃ£o SSH
                    env.VM_HOST = env.VM_HOST ?: '135.181.24.29'
                    env.VM_USER = env.VM_USER ?: 'root'
                    env.VM_PASSWORD = env.VM_PASSWORD ?: 'zx100mil!'
                    
                    echo 'ðŸ” Credenciais configuradas'
                    echo "ðŸ–¥ï¸  VM: ${env.VM_HOST}"
                    echo "ðŸ‘¤ UsuÃ¡rio: ${env.VM_USER}"
                }
            }
        }
        
        stage('Instalar DependÃªncias') {
            steps {
                script {
                    echo 'ðŸ“¦ Instalando dependÃªncias...'
                    sh '''
                        # Verificar e instalar sshpass
                        if ! command -v sshpass &> /dev/null; then
                            echo "ðŸ“¦ Instalando sshpass..."
                            sudo apt-get update
                            sudo apt-get install -y sshpass
                        else
                            echo "âœ… sshpass jÃ¡ estÃ¡ instalado"
                        fi
                        
                        # Verificar se sshpass foi instalado
                        if command -v sshpass &> /dev/null; then
                            echo "âœ… sshpass instalado: $(sshpass -V)"
                        else
                            echo "âŒ Falha na instalaÃ§Ã£o do sshpass"
                            echo "ðŸ’¡ Tentando instalar expect como alternativa..."
                            sudo apt-get install -y expect
                        fi
                    '''
                }
            }
        }
        
        stage('Teste MÃ­nimo') {
            steps {
                script {
                    echo 'ðŸ§ª Testando conexÃ£o SSH e comandos bÃ¡sicos...'
                    
                    sh '''
                        # Tentar com sshpass primeiro
                        if command -v sshpass &> /dev/null; then
                            echo "ðŸ”‘ Usando sshpass..."
                            sshpass -p "${VM_PASSWORD}" ssh -o StrictHostKeyChecking=no "${VM_USER}@${VM_HOST}" '
                                echo "âœ… ConexÃ£o SSH estabelecida!"
                                echo "ðŸ–¥ï¸  Sistema: $(uname -a)"
                                echo "ðŸ“¦ Executando apt update..."
                                apt update
                                echo "ðŸ“¦ Executando apt upgrade -y..."
                                apt upgrade -y
                                echo "ðŸŽ‰ Teste mÃ­nimo concluÃ­do com sucesso!"
                            '
                        elif command -v expect &> /dev/null; then
                            echo "ðŸ”‘ Usando expect..."
                            # Criar script expect temporÃ¡rio
                            cat > /tmp/ssh_test.exp << "EOF"
                            #!/usr/bin/expect -f
                            set timeout 30
                            spawn ssh -o StrictHostKeyChecking=no ${VM_USER}@${VM_HOST}
                            expect "password:"
                            send "${VM_PASSWORD}\r"
                            expect "$ "
                            send "echo 'âœ… ConexÃ£o SSH estabelecida!'\r"
                            send "echo 'ðŸ–¥ï¸  Sistema:' \$(uname -a)\r"
                            send "echo 'ðŸ“¦ Executando apt update...'\r"
                            send "apt update\r"
                            send "echo 'ðŸ“¦ Executando apt upgrade -y...'\r"
                            send "apt upgrade -y\r"
                            send "echo 'ðŸŽ‰ Teste mÃ­nimo concluÃ­do com sucesso!'\r"
                            send "exit\r"
                            expect eof
                            EOF
                            chmod +x /tmp/ssh_test.exp
                            /tmp/ssh_test.exp
                            rm -f /tmp/ssh_test.exp
                        else
                            echo "âŒ Nenhuma ferramenta de automaÃ§Ã£o SSH disponÃ­vel"
                            echo "ðŸ’¡ Instale manualmente: sudo apt-get install sshpass"
